{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "@storybook/react"]
  },
  "include": [
    "src",
    "src/theme/interfaces.ts",
    "src/theme/Theme.ts",
    "src/theme/ThemeProvider.tsx"
  ],
  "exclude": ["node_modules", "dist", "storybook-static"]
}
